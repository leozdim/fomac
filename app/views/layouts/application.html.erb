<section id="main-content">
  <section class="grey lighten-5 login-form">
    <div class="container">
      <div class="row">
        <div class="col s12 m12 l12 z-depth-5 card col-center animated bounceInRight">
          <div class="card-content">
            <%= yield %>
          </div>
        </div>
        <%= render 'layouts/creator_navigation' if current_user&.role==:creator and !@project&.finish? %>
      </div>
    </div>
    <div class="fixed-action-btn">
      <%#= link_to(t(:proyect),project_path(@project.id), class: 'btn waves-effect waves-light red lighten-1', :style=>"color:white") if user_signed_in? && current_user&.role==:creator %>
      <%if current_user&.role==:admin or current_user&.role==:judge%>
      <%= link_to(t(:proyectos),projects_path, class: 'btn waves-effect waves-light blue', :style=>"color:white") if user_signed_in?  %>
      <% end %>
      <%if current_user&.role==:admin%>
      <%= link_to(t(:usuarios),users_path, class: 'btn waves-effect waves-light blue', :style=>"color:white") if user_signed_in?  %>
      <% end %>
      <%= link_to('Cerrar sesión',destroy_user_session_path, method: :delete, class: 'btn waves-effect waves-light red lighten-1', :style=>"color:white") if user_signed_in?  %>

    </div>
  </section>
  <footer class="page-footer white ">
    <div class="col s12 m12 l12 center">
      <%= image_tag "placeholders/logo-chihuahua.jpg" , class: 'responsive-img' %>
    </div>
  </footer>
</section>
