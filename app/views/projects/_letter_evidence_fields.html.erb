<div >
  Teatro
  <%= f.hidden_field :id %>
  <%= f.label 'Sitio web' %>
  <%= f.text_field :web %>
  <div class="file-field input-field">
    <div class="btn">
      <span>
        Cargar
        <%= f.file_field :work %>
      </span>
    </div>
    <div class="file-path-wrapper">
      <%= text_field_tag nil, f.object.work.url, class: 'file-path validate', placeholder: 'Texto' %>
    </div>
  </div>
  <div class="file-field input-field">
    <div class="btn">
      <span>
        Cargar
        <%= f.file_field :cover, multiple:true %>
      </span>
    </div>
    <div class="file-path-wrapper">
      <%= text_field_tag nil, f.object.covers, class: 'file-path validate', placeholder: 'Portadas' %>
    </div>
  </div>
</div>
