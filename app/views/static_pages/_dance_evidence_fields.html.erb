
<div>
  <div class="col s12" style="border-top: 1px solid rgba(160,160,160,0.2); margin-top: 24px;">
    <span class="card-title" style="margin-top: 24px;">Evidencias Danza</span>
    <ul class="collection">

      <li class="collection-item avatar">
        <i class="material-icons circle">folder</i>
        <span class="title">Video de muestra</span>
        <div style="margin-top:16px">
          <%= f.text_field :video, disabled:true%>
          <a class='dropdown-button btn' href='#' data-activates='videodance'>Validar Video de muestra</a>
          <ul id='videodance' class='dropdown-content'>
            <li><a href="<%=new_revision_path(:project_id => @project.id, :user_id=> @project.user.id,:field=>"video",:status=>"Valido", :model=>"dance_evidence")%>"data-confirm="¿Estás seguro?">Validar</a></li>
            <%if get_observation_id("video","dance_evidence") != ""%>
              <li><a href="<%=edit_revision_path(get_observation_id("video","dance_evidence"))%>">Editar observacion</a></li>
            <%else%>
              <li><a href="<%=new_revision_path(:project_id => @project.id, :user_id=> @project.user.id,:field=>"video",:status=>"Invalido", :model=>"dance_evidence")%>">Agregar observaciones</a></li>
            <%end%>
          </ul>
          <%if get_status("video","dance_evidence") == "Invalido"%>
            <div class="input-field">
              <textarea class="materialize-textarea" disabled><%=get_observation("video","dance_evidence")%></textarea>
            </div>
          <%end%>
        </div>
        <div class="secondary-content">
          <%= get_status("video","dance_evidence") %>
        </div>
      </li>

      <li class="collection-item avatar">
        <i class="material-icons circle">folder</i>
        <span class="title">Sitio web</span>
        <div style="margin-top:16px">
          <%= f.text_field :web , disabled: true%>
          <a class='dropdown-button btn' href='#' data-activates='webdance'>Validar Sitio web</a>
          <ul id='webdance' class='dropdown-content'>
            <li><a href="<%=new_revision_path(:project_id => @project.id, :user_id=> @project.user.id,:field=>"web",:status=>"Valido", :model=>"dance_evidence")%>"data-confirm="¿Estás seguro?">Validar</a></li>
            <%if get_observation_id("web","dance_evidence") != ""%>
              <li><a href="<%=edit_revision_path(get_observation_id("web","dance_evidence"))%>">Editar observacion</a></li>
            <%else%>
              <li><a href="<%=new_revision_path(:project_id => @project.id, :user_id=> @project.user.id,:field=>"web",:status=>"Invalido", :model=>"dance_evidence")%>">Agregar observaciones</a></li>
            <%end%>
          </ul>
          <%if get_status("web","dance_evidence") == "Invalido"%>
            <div class="input-field">
              <textarea class="materialize-textarea" disabled><%=get_observation("web","dance_evidence")%></textarea>
            </div>
          <%end%>
        </div>
        <div class="secondary-content">
          <%= get_status("web","dance_evidence") %>
        </div>
      </li>
      <li class="collection-item avatar">
        <i class="material-icons circle">folder</i>
        <span class="title">Imágenes</span>
        <div style="margin-top:16px">
          <% f.object.image.each do |ob| %>
            <%= link_to 'Descargar', ob.url , :target=>"_blank", :class => 'waves-effect waves-light btn', :style => 'color:white;'%>
          <%end%>
          <a class='dropdown-button btn' href='#' data-activates='imagedance'>Validar Imágenes</a>
          <ul id='imagedance' class='dropdown-content'>
            <li><a href="<%=new_revision_path(:project_id => @project.id, :user_id=> @project.user.id,:field=>"image",:status=>"Valido", :model=>"dance_evidence")%>"data-confirm="¿Estás seguro?">Validar</a></li>
            <%if get_observation_id("image","dance_evidence") != ""%>
              <li><a href="<%=edit_revision_path(get_observation_id("image","dance_evidence"))%>">Editar observacion</a></li>
            <%else%>
              <li><a href="<%=new_revision_path(:project_id => @project.id, :user_id=> @project.user.id,:field=>"image",:status=>"Invalido", :model=>"dance_evidence")%>">Agregar observaciones</a></li>
            <%end%>
          </ul>
          <%if get_status("image","dance_evidence") == "Invalido"%>
            <div class="input-field">
              <textarea class="materialize-textarea" disabled><%=get_observation("image","dance_evidence")%></textarea>
            </div>
          <%end%>
        </div>
        <div class="secondary-content">
          <%= get_status("image","dance_evidence") %>
        </div>
      </li>

      <li class="collection-item avatar">
        <i class="material-icons circle">folder</i>
        <span class="title">Notas de prensa</span>
        <div style="margin-top:16px">
          <% f.object.note.each do |ob| %>
            <%= link_to 'Descargar', ob.url , :target=>"_blank", :class => 'waves-effect waves-light btn', :style => 'color:white;'%>
          <%end%>
          <a class='dropdown-button btn' href='#' data-activates='notedance'>Validar Notas de prensa</a>
          <ul id='notedance' class='dropdown-content'>
            <li><a href="<%=new_revision_path(:project_id => @project.id, :user_id=> @project.user.id,:field=>"note",:status=>"Valido", :model=>"dance_evidence")%>"data-confirm="¿Estás seguro?">Validar</a></li>
            <%if get_observation_id("note","dance_evidence") != ""%>
              <li><a href="<%=edit_revision_path(get_observation_id("note","dance_evidence"))%>">Editar observacion</a></li>
            <%else%>
              <li><a href="<%=new_revision_path(:project_id => @project.id, :user_id=> @project.user.id,:field=>"note",:status=>"Invalido", :model=>"dance_evidence")%>">Agregar observaciones</a></li>
            <%end%>
          </ul>
          <%if get_status("note","dance_evidence") == "Invalido"%>
            <div class="input-field">
              <textarea class="materialize-textarea" disabled><%=get_observation("note","dance_evidence")%></textarea>
            </div>
          <%end%>
        </div>
        <div class="secondary-content">
          <%= get_status("note","dance_evidence") %>
        </div>
      </li>


      <li class="collection-item avatar">
        <i class="material-icons circle">folder</i>
        <span class="title">Invitaciones, constancios y/o reconocimientos</span>
        <div style="margin-top:16px">
          <% f.object.document.each do |ob| %>
            <%= link_to 'Descargar', ob.url , :target=>"_blank", :class => 'waves-effect waves-light btn', :style => 'color:white;'%>
          <%end%>
          <a class='dropdown-button btn' href='#' data-activates='documentdance'>Validar Invitaciones, constancios y/o reconocimientos</a>
          <ul id='documentdance' class='dropdown-content'>
            <li><a href="<%=new_revision_path(:project_id => @project.id, :user_id=> @project.user.id,:field=>"document",:status=>"Valido", :model=>"dance_evidence")%>"data-confirm="¿Estás seguro?">Validar</a></li>
            <%if get_observation_id("document","dance_evidence") != ""%>
              <li><a href="<%=edit_revision_path(get_observation_id("document","dance_evidence"))%>">Editar observacion</a></li>
            <%else%>
              <li><a href="<%=new_revision_path(:project_id => @project.id, :user_id=> @project.user.id,:field=>"document",:status=>"Invalido", :model=>"dance_evidence")%>">Agregar observaciones</a></li>
            <%end%>
          </ul>
          <%if get_status("document","dance_evidence") == "Invalido"%>
            <div class="input-field">
              <textarea class="materialize-textarea" disabled><%=get_observation("document","dance_evidence")%></textarea>
            </div>
          <%end%>
        </div>
        <div class="secondary-content">
          <%= get_status("document","dance_evidence") %>
        </div>
      </li>




    </ul>
  </div>
</div>



